<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="FuturoDoTrabalho.ResultsWindow"
        Title="Resultado da Simulação"
        Width="700" Height="420">
  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock x:Name="TitleTextBlock" Grid.Row="0" FontSize="20" FontWeight="Bold"/>
    <TextBlock x:Name="IndexTextBlock" Grid.Row="1" Margin="0,8,0,8" FontSize="18"/>

    <StackPanel Grid.Row="2">
      <TextBlock x:Name="ClassificationTextBlock" FontSize="14" Margin="0,0,0,8" TextWrapping="Wrap"/>
      <TextBlock x:Name="RecommendationsTextBlock" FontSize="13" TextWrapping="Wrap"/>
    </StackPanel>

    <Button Grid.Row="3" Content="Fechar" HorizontalAlignment="Right" Padding="16,4" Click="OnCloseClick"/>
  </Grid>
</Window>
