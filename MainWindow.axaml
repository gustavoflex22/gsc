<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="FuturoDoTrabalho.MainWindow"
        Title="FutureWork IA - Simulador"
        Width="900" Height="520">
  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Cabeçalho -->
    <StackPanel Grid.Row="0" Margin="0,0,0,10">
      <TextBlock Text="FutureWork IA" FontSize="26" FontWeight="Bold"/>
      <TextBlock Text="Simule como será o seu trabalho no futuro" Opacity="0.7"/>
    </StackPanel>

    <!-- Conteúdo principal -->
    <Grid Grid.Row="1" ColumnDefinitions="2*,*">
      <!-- Formulário -->
      <StackPanel Grid.Column="0" Margin="0,0,20,0">
        <TextBlock Text="Modelo de trabalho" Margin="0,0,0,4"/>
        <ComboBox x:Name="WorkModelComboBox" SelectedIndex="0" Height="30">
          <ComboBoxItem>Remoto</ComboBoxItem>
          <ComboBoxItem>Híbrido</ComboBoxItem>
          <ComboBoxItem>Presencial</ComboBoxItem>
        </ComboBox>

        <TextBlock Text="Automação com IA (0-10)" Margin="0,10,0,4"/>
        <Slider x:Name="AutomationSlider"
                Minimum="0"
                Maximum="10"
                Value="5"
                IsSnapToTickEnabled="True"
                TickFrequency="1"/>
        <TextBlock Text="{Binding #AutomationSlider.Value, StringFormat=Valor: {0:F0}}" Opacity="0.7"/>

        <TextBlock Text="Bem-estar no trabalho (0-10)" Margin="0,10,0,4"/>
        <Slider x:Name="WellbeingSlider"
                Minimum="0"
                Maximum="10"
                Value="7"
                IsSnapToTickEnabled="True"
                TickFrequency="1"/>
        <TextBlock Text="{Binding #WellbeingSlider.Value, StringFormat=Valor: {0:F0}}" Opacity="0.7"/>

        <TextBlock Text="Inclusão e diversidade (0-10)" Margin="0,10,0,4"/>
        <Slider x:Name="InclusionSlider"
                Minimum="0"
                Maximum="10"
                Value="6"
                IsSnapToTickEnabled="True"
                TickFrequency="1"/>
        <TextBlock Text="{Binding #InclusionSlider.Value, StringFormat=Valor: {0:F0}}" Opacity="0.7"/>

        <TextBlock Text="Sustentabilidade (0-10)" Margin="0,10,0,4"/>
        <Slider x:Name="SustainabilitySlider"
                Minimum="0"
                Maximum="10"
                Value="6"
                IsSnapToTickEnabled="True"
                TickFrequency="1"/>
        <TextBlock Text="{Binding #SustainabilitySlider.Value, StringFormat=Valor: {0:F0}}" Opacity="0.7"/>
      </StackPanel>

      <!-- Painel de explicação -->
      <Border Grid.Column="1" Padding="12">
        <StackPanel>
          <TextBlock Text="Sobre o simulador" FontSize="16" FontWeight="Bold"/>
          <TextBlock TextWrapping="Wrap" Margin="0,8,0,0">
            Este protótipo representa o trabalho do futuro com:
            • uso de IA para automatizar tarefas;
            • foco em bem-estar;
            • inclusão e diversidade;
            • sustentabilidade.
            Ajuste os indicadores e veja seu índice de Trabalho do Futuro.
          </TextBlock>
        </StackPanel>
      </Border>
    </Grid>

    <!-- Rodapé -->
    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
      <Button Content="Sobre" Margin="0,0,10,0" Padding="12,4" Click="OnAboutClick"/>
      <Button Content="Simular Futuro" Padding="16,4" Click="OnSimulateClick"/>
    </StackPanel>
  </Grid>
</Window>